<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net4.8</TargetFramework>
    <OutputType>Library</OutputType>
    <LangVersion>9</LangVersion>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>
  <PropertyGroup>
    <BinariesOutputRelativePath>GameData/000_KSPBurst/Plugins</BinariesOutputRelativePath>
    <PluginsDir>$(RepoRootPath)/$(BinariesOutputRelativePath)</PluginsDir>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="KSPBuildTools" Version="0.0.3-alpha.4" />
    <PackageReference Include="ResourceHacker.CommandLineTool" Version="4.7.34" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="$(PluginsDir)/Microsoft.Extensions.FileSystemGlobbing.dll" />
    <Reference Include="$(PluginsDir)/System.IO.Compression.dll" />
    <Reference Include="$(PluginsDir)/System.IO.Compression.FileSystem.dll" />
  </ItemGroup>
  <PropertyGroup>
    <AssemblyTitle>KSPBurst</AssemblyTitle>
    <Product>KSPBurst</Product>
    <Copyright>Copyright ©  2021</Copyright>
    <AssemblyVersion>1.5.5.1</AssemblyVersion>
    <FileVersion>1.5.5.1</FileVersion>
  </PropertyGroup>
</Project>